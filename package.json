{
  "name": "reddrill",
  "version": "1.2.0",
  "private": false,
  "scripts": {
    "dev": "lsof -ti:3000 | xargs kill -9 2>/dev/null || true && next dev --turbopack",
    "build": "next build --webpack",
    "build:worker": "opennextjs-cloudflare build --skipBuild",
    "build:fix": "node scripts/fix-duplicate-keys.js",
    "build:full": "npm run build && npm run build:worker && npm run build:fix",
    "preview": "wrangler dev",
    "deploy": "npm run build:full && npm run db:migrate:remote && wrangler deploy",
    "deploy:production": "npm run build:full && npm run db:migrate:remote && wrangler deploy --env production",
    "start": "next start",
    "lint": "next lint",
    "db:create": "wrangler d1 create reddrill-audit",
    "db:migrate:local": "wrangler d1 migrations apply reddrill-audit --local",
    "db:migrate:remote": "wrangler d1 migrations apply reddrill-audit --remote",
    "db:migrations:create": "wrangler d1 migrations create reddrill-audit",
    "db:list": "wrangler d1 list",
    "db:query:local": "wrangler d1 execute reddrill-audit --local --command",
    "db:query:remote": "wrangler d1 execute reddrill-audit --remote --command"
  },
  "dependencies": {
    "@cloudflare/ai": "^1.2.2",
    "@codemirror/lang-html": "^6.4.11",
    "@grapesjs/react": "^2.0.0",
    "@mailchimp/mailchimp_transactional": "^1.0.59",
    "@radix-ui/react-alert-dialog": "1.1.15",
    "@radix-ui/react-checkbox": "1.3.3",
    "@radix-ui/react-dialog": "1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-select": "2.2.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tabler/icons-react": "3.35.0",
    "@uiw/react-codemirror": "^4.25.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.3",
    "drizzle-kit": "^0.31.5",
    "drizzle-orm": "^0.44.7",
    "grapesjs": "^0.22.13",
    "grapesjs-preset-newsletter": "^1.0.2",
    "idb": "^8.0.3",
    "idb-keyval": "^6.2.1",
    "next": "^16.0.0",
    "node-html-parser": "^7.0.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "shadcn-ui": "^0.9.5",
    "swr": "^2.3.6",
    "tailwind-merge": "3.3.1",
    "zustand": "5.0.8"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@opennextjs/cloudflare": "^1.11.0",
    "@tailwindcss/postcss": "4.1.14",
    "@types/node": "24.8.1",
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.2",
    "babel-plugin-react-compiler": "^1.0.0",
    "eslint": "9.38.0",
    "eslint-config-next": "^16.0.0",
    "tailwindcss": "4.1.14",
    "tw-animate-css": "1.4.0",
    "typescript": "5.9.3",
    "wrangler": "^4.45.0"
  }
}
